<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smu.urvoice.mapper.user.UserMapper">

 	<select id="getUser" resultType="com.smu.urvoice.dto.user.UserDto">
        SELECT login_id, password
        from user
        WHERE login_id = #{loginId};
    </select>
    
     <insert id="insertUser" parameterType="com.smu.urvoice.dto.user.UserDto" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (login_id, password)
        VALUES(#{loginId}, #{password})
     </insert>
</mapper>